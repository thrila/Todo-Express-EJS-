<%- include('header'); -%>

    <div class="box" id="heading">
        <h1>To do List</h1>
        <p id="date"><%= work%></p>
    </div>
    
    <div class="box">

        <div class="box">
          <%  items.forEach((item)=> { %>

            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" value="<%= item._id%>" onChange="this.form.submit()" name="checkBox" >
                    <p><%= item.name%></p>
                </div>
            </form>
           <% })    %>
            
            
                   <form  class="item" action="/" method="post">
                    <input type="text" name="newTasks" placeholder="Add Tasks" autocomplete="off">
                    <button type="submit">+</button>
                </form>
            
        </div>
    </div>
    
   
    <%- include('footer'); -%>